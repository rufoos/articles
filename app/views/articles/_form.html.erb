<div class="row">
  <%= form_for @article, remote: true, html: {class: "form"} do |f| %>
    <%= f.hidden_field :lock_version %>
    <div class="alert flash-message" id="alert"></div>
    <div class="span7">
      <h4>Основная информация</h4>
      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%= f.label :title %>
            <%= f.text_field :title %>
          </div>
          <div class="control-group">
            <%= f.label :category_title %>
            <%= f.text_field :category_title, data: {autocomplete_path: categories_path} %>
          </div>
          <div class="control-group">
            <%= f.label :date %>
            <%= f.text_field :date, class: "datepicker", value: f.object.date.nil? ? "" : f.object.date.strftime("%d.%m.%Y") %>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%= f.label :content %>
            <%= f.text_area :content, style: 'width: 100%; height: 95px;' %>
          </div>
          <div class="control-group">
            <%= f.label :author %>
            <%= f.text_field :author %>
          </div>
        </div>
      </div>
      <%= f.submit @article.new_record? ? t('button.article.create') : t('button.article.update'), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>