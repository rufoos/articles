<h2><%= articles_title %></h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Название</th>
      <th>Категория</th>
      <th>Автор</th>
      <th>IP адрес</th>
      <th>Дата</th>
      <th>Рейтинг</th>
      <th>Кол-во комментариев</th>
    </tr>
  </thead>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= link_to article.title, article_path(article), class: "load-article" %></td>
      <td><%= article.category_title %></td>
      <td><%= article.author %></td>
      <td><%= article.ip %></td>
      <td><%= article.date ? article.date.strftime("%d.%m.%Y") : "" %></td>
      <td><%= article.rating %></td>
      <td><%= article.count_comments %></td>
    </tr>
  <% end %>
</table>
<%= ajax_will_paginate @articles if action_name != "top10" %>